{
  "test_plan": {
    "test_name": "登录界面功能测试",
    "test_url": "http://192.168.142.146/login?",
    "test_date": "2025-12-30",
    "test_target": "PC端",
    "preconditions": [
      "浏览器已启动",
      "能够访问测试URL"
    ],
    "test_cases": [
      {
        "test_case_id": "TC001",
        "test_case_name": "验证页面元素存在性",
        "priority": "P0",
        "steps": [
          {
            "step_num": 1,
            "action": "打开浏览器并访问登录页面",
            "expected_result": "页面成功加载，显示登录界面"
          },
          {
            "step_num": 2,
            "action": "验证页面标题存在",
            "expected_result": "页面标题正确显示"
          },
          {
            "step_num": 3,
            "action": "验证账号输入框存在",
            "expected_result": "账号输入框可见且可操作"
          },
          {
            "step_num": 4,
            "action": "验证密码输入框存在",
            "expected_result": "密码输入框可见且可操作"
          },
          {
            "step_num": 5,
            "action": "验证登录按钮存在",
            "expected_result": "登录按钮可见且可点击"
          }
        ]
      },
      {
        "test_case_id": "TC002",
        "test_case_name": "清除预先填充的账号密码",
        "priority": "P0",
        "steps": [
          {
            "step_num": 1,
            "action": "刷新页面",
            "expected_result": "页面重新加载"
          },
          {
            "step_num": 2,
            "action": "删除账号输入框中的预设内容",
            "expected_result": "账号输入框为空"
          },
          {
            "step_num": 3,
            "action": "删除密码输入框中的预设内容",
            "expected_result": "密码输入框为空"
          }
        ]
      },
      {
        "test_case_id": "TC003",
        "test_case_name": "空账号登录测试",
        "priority": "P1",
        "steps": [
          {
            "step_num": 1,
            "action": "清除账号输入框内容",
            "expected_result": "账号输入框为空"
          },
          {
            "step_num": 2,
            "action": "输入密码: admin123",
            "expected_result": "密码输入框显示输入内容（掩码形式）"
          },
          {
            "step_num": 3,
            "action": "点击登录按钮",
            "expected_result": "显示错误提示，未跳转"
          },
          {
            "step_num": 4,
            "action": "验证错误提示信息",
            "expected_result": "显示'请输入账号'或类似提示"
          }
        ]
      },
      {
        "test_case_id": "TC004",
        "test_case_name": "空密码登录测试",
        "priority": "P1",
        "steps": [
          {
            "step_num": 1,
            "action": "清除输入框内容",
            "expected_result": "账号和密码输入框为空"
          },
          {
            "step_num": 2,
            "action": "输入账号: admin",
            "expected_result": "账号输入框显示admin"
          },
          {
            "step_num": 3,
            "action": "点击登录按钮",
            "expected_result": "显示错误提示，未跳转"
          },
          {
            "step_num": 4,
            "action": "验证错误提示信息",
            "expected_result": "显示'请输入密码'或类似提示"
          }
        ]
      },
      {
        "test_case_id": "TC005",
        "test_case_name": "空账号空密码登录测试",
        "priority": "P1",
        "steps": [
          {
            "step_num": 1,
            "action": "清除输入框内容",
            "expected_result": "账号和密码输入框为空"
          },
          {
            "step_num": 2,
            "action": "点击登录按钮",
            "expected_result": "显示错误提示，未跳转"
          },
          {
            "step_num": 3,
            "action": "验证错误提示信息",
            "expected_result": "显示'请输入账号和密码'或类似提示"
          }
        ]
      },
      {
        "test_case_id": "TC006",
        "test_case_name": "错误账号登录测试",
        "priority": "P1",
        "steps": [
          {
            "step_num": 1,
            "action": "清除输入框内容",
            "expected_result": "账号和密码输入框为空"
          },
          {
            "step_num": 2,
            "action": "输入账号: wrongadmin",
            "expected_result": "账号输入框显示wrongadmin"
          },
          {
            "step_num": 3,
            "action": "输入密码: admin123",
            "expected_result": "密码输入框显示输入内容（掩码形式）"
          },
          {
            "step_num": 4,
            "action": "点击登录按钮",
            "expected_result": "显示登录失败提示，未跳转"
          },
          {
            "step_num": 5,
            "action": "验证错误提示信息",
            "expected_result": "显示'账号或密码错误'或类似提示"
          }
        ]
      },
      {
        "test_case_id": "TC007",
        "test_case_name": "错误密码登录测试",
        "priority": "P1",
        "steps": [
          {
            "step_num": 1,
            "action": "清除输入框内容",
            "expected_result": "账号和密码输入框为空"
          },
          {
            "step_num": 2,
            "action": "输入账号: admin",
            "expected_result": "账号输入框显示admin"
          },
          {
            "step_num": 3,
            "action": "输入密码: wrongpassword",
            "expected_result": "密码输入框显示输入内容（掩码形式）"
          },
          {
            "step_num": 4,
            "action": "点击登录按钮",
            "expected_result": "显示登录失败提示，未跳转"
          },
          {
            "step_num": 5,
            "action": "验证错误提示信息",
            "expected_result": "显示'账号或密码错误'或类似提示"
          }
        ]
      },
      {
        "test_case_id": "TC008",
        "test_case_name": "正确账号密码登录测试",
        "priority": "P0",
        "steps": [
          {
            "step_num": 1,
            "action": "清除输入框内容",
            "expected_result": "账号和密码输入框为空"
          },
          {
            "step_num": 2,
            "action": "输入账号: admin",
            "expected_result": "账号输入框显示admin"
          },
          {
            "step_num": 3,
            "action": "输入密码: admin123",
            "expected_result": "密码输入框显示输入内容（掩码形式）"
          },
          {
            "step_num": 4,
            "action": "点击登录按钮",
            "expected_result": "显示Loading状态，等待响应"
          },
          {
            "step_num": 5,
            "action": "验证页面是否跳转到首页",
            "expected_result": "页面跳转到系统首页"
          },
          {
            "step_num": 6,
            "action": "查找登出按钮",
            "expected_result": "找到登出按钮"
          },
          {
            "step_num": 7,
            "action": "点击登出按钮",
            "expected_result": "系统显示退出确认或直接退出"
          },
          {
            "step_num": 8,
            "action": "确认登出操作",
            "expected_result": "返回到登录页面"
          }
        ]
      },
      {
        "test_case_id": "TC009",
        "test_case_name": "密码输入框掩码验证",
        "priority": "P2",
        "steps": [
          {
            "step_num": 1,
            "action": "清除输入框内容",
            "expected_result": "账号和密码输入框为空"
          },
          {
            "step_num": 2,
            "action": "点击密码输入框",
            "expected_result": "密码输入框获得焦点"
          },
          {
            "step_num": 3,
            "action": "输入任意字符",
            "expected_result": "显示为掩码字符（如*或•）"
          }
        ]
      },
      {
        "test_case_id": "TC010",
        "test_case_name": "输入框回车键登录测试",
        "priority": "P2",
        "steps": [
          {
            "step_num": 1,
            "action": "清除输入框内容",
            "expected_result": "账号和密码输入框为空"
          },
          {
            "step_num": 2,
            "action": "输入账号: wrongadmin",
            "expected_result": "账号输入框显示wrongadmin"
          },
          {
            "step_num": 3,
            "action": "输入密码: wrongpassword",
            "expected_result": "密码输入框显示输入内容（掩码形式）"
          },
          {
            "step_num": 4,
            "action": "在密码输入框中按回车键",
            "expected_result": "触发登录请求，显示错误提示"
          }
        ]
      },
      {
        "test_case_id": "TC011",
        "test_case_name": "登录按钮禁用状态测试",
        "priority": "P2",
        "steps": [
          {
            "step_num": 1,
            "action": "清除输入框内容",
            "expected_result": "账号和密码输入框为空"
          },
          {
            "step_num": 2,
            "action": "检查登录按钮状态",
            "expected_result": "登录按钮可能处于禁用状态（取决于系统设计）"
          },
          {
            "step_num": 3,
            "action": "输入账号: admin",
            "expected_result": "账号输入框显示admin"
          },
          {
            "step_num": 4,
            "action": "检查登录按钮状态",
            "expected_result": "检查登录按钮是否启用"
          }
        ]
      },
      {
        "test_case_id": "TC012",
        "test_case_name": "特殊字符账号测试",
        "priority": "P2",
        "steps": [
          {
            "step_num": 1,
            "action": "清除输入框内容",
            "expected_result": "账号和密码输入框为空"
          },
          {
            "step_num": 2,
            "action": "输入包含特殊字符的账号: admin@test",
            "expected_result": "账号输入框显示输入内容"
          },
          {
            "step_num": 3,
            "action": "输入密码: admin123",
            "expected_result": "密码输入框显示输入内容（掩码形式）"
          },
          {
            "step_num": 4,
            "action": "点击登录按钮",
            "expected_result": "显示错误提示，未跳转"
          }
        ]
      },
      {
        "test_case_id": "TC013",
        "test_case_name": "超长账号测试",
        "priority": "P2",
        "steps": [
          {
            "step_num": 1,
            "action": "清除输入框内容",
            "expected_result": "账号和密码输入框为空"
          },
          {
            "step_num": 2,
            "action": "输入50个字符的账号",
            "expected_result": "账号输入框显示输入内容"
          },
          {
            "step_num": 3,
            "action": "输入密码: admin123",
            "expected_result": "密码输入框显示输入内容（掩码形式）"
          },
          {
            "step_num": 4,
            "action": "点击登录按钮",
            "expected_result": "显示错误提示，未跳转"
          }
        ]
      },
      {
        "test_case_id": "TC014",
        "test_case_name": "连续登录失败测试",
        "priority": "P2",
        "steps": [
          {
            "step_num": 1,
            "action": "清除输入框内容",
            "expected_result": "账号和密码输入框为空"
          },
          {
            "step_num": 2,
            "action": "输入错误的账号密码",
            "expected_result": "输入框显示内容"
          },
          {
            "step_num": 3,
            "action": "点击登录按钮",
            "expected_result": "显示错误提示"
          },
          {
            "step_num": 4,
            "action": "重复错误登录操作3次",
            "expected_result": "验证系统行为（是否有锁定等机制）"
          }
        ]
      },
      {
        "test_case_id": "TC015",
        "test_case_name": "刷新后重新正确登录测试",
        "priority": "P1",
        "steps": [
          {
            "step_num": 1,
            "action": "刷新页面",
            "expected_result": "页面重新加载"
          },
          {
            "step_num": 2,
            "action": "清除预设的账号密码",
            "expected_result": "账号和密码输入框为空"
          },
          {
            "step_num": 3,
            "action": "输入账号: admin",
            "expected_result": "账号输入框显示admin"
          },
          {
            "step_num": 4,
            "action": "输入密码: admin123",
            "expected_result": "密码输入框显示输入内容（掩码形式）"
          },
          {
            "step_num": 5,
            "action": "点击登录按钮",
            "expected_result": "登录成功，跳转到首页"
          },
          {
            "step_num": 6,
            "action": "执行登出操作",
            "expected_result": "返回到登录页面"
          }
        ]
      }
    ],
    "test_notes": [
      "所有测试用例均不考虑安全问题",
      "仅测试PC端功能",
      "正确登录测试用例放在最后执行，确保测试后执行登出操作",
      "每次打开页面后都需要清除预先填充的账号密码"
    ]
  }
}