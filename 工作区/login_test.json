{
  "test_plan": {
    "name": "登录界面功能测试计划",
    "version": "1.0",
    "test_url": "http://192.168.142.146/login",
    "target_platform": "PC",
    "credentials": {
      "admin": "admin",
      "password": "admin123"
    },
    "test_suites": [
      {
        "name": "基础登录功能测试",
        "description": "测试基本的登录功能",
        "test_cases": [
          {
            "id": "TC001",
            "name": "有效凭证登录测试",
            "description": "使用有效的管理员凭证登录系统",
            "priority": "高",
            "steps": [
              {
                "step": 1,
                "action": "导航到登录页面",
                "element": "页面URL",
                "locator": "http://192.168.142.146/login",
                "operation": "navigate",
                "expected": "页面成功加载，显示登录表单"
              },
              {
                "step": 2,
                "action": "输入用户名",
                "element": "用户名输入框",
                "locator": "input[name='username']",
                "operation": "type",
                "value": "admin",
                "expected": "用户名输入框显示'admin'"
              },
              {
                "step": 3,
                "action": "输入密码",
                "element": "密码输入框",
                "locator": "input[name='password']",
                "operation": "type",
                "value": "admin123",
                "expected": "密码输入框正确输入（可能显示为掩码字符）"
              },
              {
                "step": 4,
                "action": "点击登录按钮",
                "element": "登录按钮",
                "locator": "button[type='submit']",
                "operation": "click",
                "expected": "成功登录，页面跳转到系统主页或仪表板"
              }
            ],
            "timeout": 10000,
            "retry_count": 2
          },
          {
            "id": "TC002",
            "name": "无效用户名登录测试",
            "description": "使用无效的用户名尝试登录",
            "priority": "中",
            "steps": [
              {
                "step": 1,
                "action": "导航到登录页面",
                "element": "页面URL",
                "locator": "http://192.168.142.146/login",
                "operation": "navigate",
                "expected": "页面成功加载，显示登录表单"
              },
              {
                "step": 2,
                "action": "输入无效用户名",
                "element": "用户名输入框",
                "locator": "input[name='username']",
                "operation": "type",
                "value": "invalid_user",
                "expected": "用户名输入框显示'invalid_user'"
              },
              {
                "step": 3,
                "action": "输入正确密码",
                "element": "密码输入框",
                "locator": "input[name='password']",
                "operation": "type",
                "value": "admin123",
                "expected": "密码输入框正确输入（可能显示为掩码字符）"
              },
              {
                "step": 4,
                "action": "点击登录按钮",
                "element": "登录按钮",
                "locator": "button[type='submit']",
                "operation": "click",
                "expected": "登录失败，显示错误消息提示用户名或密码错误"
              }
            ],
            "timeout": 10000,
            "retry_count": 2
          },
          {
            "id": "TC003",
            "name": "无效密码登录测试",
            "description": "使用有效的用户名但无效的密码尝试登录",
            "priority": "中",
            "steps": [
              {
                "step": 1,
                "action": "导航到登录页面",
                "element": "页面URL",
                "locator": "http://192.168.142.146/login",
                "operation": "navigate",
                "expected": "页面成功加载，显示登录表单"
              },
              {
                "step": 2,
                "action": "输入有效用户名",
                "element": "用户名输入框",
                "locator": "input[name='username']",
                "operation": "type",
                "value": "admin",
                "expected": "用户名输入框显示'admin'"
              },
              {
                "step": 3,
                "action": "输入无效密码",
                "element": "密码输入框",
                "locator": "input[name='password']",
                "operation": "type",
                "value": "wrongpassword",
                "expected": "密码输入框正确输入（可能显示为掩码字符）"
              },
              {
                "step": 4,
                "action": "点击登录按钮",
                "element": "登录按钮",
                "locator": "button[type='submit']",
                "operation": "click",
                "expected": "登录失败，显示错误消息提示用户名或密码错误"
              }
            ],
            "timeout": 10000,
            "retry_count": 2
          },
          {
            "id": "TC004",
            "name": "空用户名和密码登录测试",
            "description": "使用空的用户名和密码尝试登录",
            "priority": "中",
            "steps": [
              {
                "step": 1,
                "action": "导航到登录页面",
                "element": "页面URL",
                "locator": "http://192.168.142.146/login",
                "operation": "navigate",
                "expected": "页面成功加载，显示登录表单"
              },
              {
                "step": 2,
                "action": "不输入用户名",
                "element": "用户名输入框",
                "locator": "input[name='username']",
                "operation": "type",
                "value": "",
                "expected": "用户名输入框为空"
              },
              {
                "step": 3,
                "action": "不输入密码",
                "element": "密码输入框",
                "locator": "input[name='password']",
                "operation": "type",
                "value": "",
                "expected": "密码输入框为空"
              },
              {
                "step": 4,
                "action": "点击登录按钮",
                "element": "登录按钮",
                "locator": "button[type='submit']",
                "operation": "click",
                "expected": "登录失败，显示验证错误消息或提示输入用户名和密码"
              }
            ],
            "timeout": 10000,
            "retry_count": 2
          }
        ]
      },
      {
        "name": "表单验证和UI元素测试",
        "description": "测试登录表单的验证功能和UI元素",
        "test_cases": [
          {
            "id": "TC005",
            "name": "密码字段隐藏显示测试",
            "description": "验证密码字段是否以掩码形式显示",
            "priority": "低",
            "steps": [
              {
                "step": 1,
                "action": "导航到登录页面",
                "element": "页面URL",
                "locator": "http://192.168.142.146/login",
                "operation": "navigate",
                "expected": "页面成功加载，显示登录表单"
              },
              {
                "step": 2,
                "action": "检查密码字段类型",
                "element": "密码输入框",
                "locator": "input[name='password']",
                "operation": "get_attribute",
                "attribute": "type",
                "expected": "密码字段type属性为'password'"
              }
            ],
            "timeout": 5000,
            "retry_count": 1
          },
          {
            "id": "TC006",
            "name": "回车键提交表单测试",
            "description": "验证在密码字段中按回车键是否能提交表单",
            "priority": "中",
            "steps": [
              {
                "step": 1,
                "action": "导航到登录页面",
                "element": "页面URL",
                "locator": "http://192.168.142.146/login",
                "operation": "navigate",
                "expected": "页面成功加载，显示登录表单"
              },
              {
                "step": 2,
                "action": "输入用户名",
                "element": "用户名输入框",
                "locator": "input[name='username']",
                "operation": "type",
                "value": "admin",
                "expected": "用户名输入框显示'admin'"
              },
              {
                "step": 3,
                "action": "输入密码",
                "element": "密码输入框",
                "locator": "input[name='password']",
                "operation": "type",
                "value": "admin123",
                "expected": "密码输入框正确输入（可能显示为掩码字符）"
              },
              {
                "step": 4,
                "action": "在密码字段按回车键",
                "element": "密码输入框",
                "locator": "input[name='password']",
                "operation": "press_key",
                "key": "Enter",
                "expected": "表单提交，尝试登录系统"
              }
            ],
            "timeout": 10000,
            "retry_count": 2
          }
        ]
      },
      {
        "name": "会话和登出测试",
        "description": "测试登录后的会话管理和登出功能",
        "test_cases": [
          {
            "id": "TC007",
            "name": "成功登录后登出测试",
            "description": "验证用户成功登录后能够正常登出",
            "priority": "高",
            "steps": [
              {
                "step": 1,
                "action": "导航到登录页面",
                "element": "页面URL",
                "locator": "http://192.168.142.146/login",
                "operation": "navigate",
                "expected": "页面成功加载，显示登录表单"
              },
              {
                "step": 2,
                "action": "输入用户名",
                "element": "用户名输入框",
                "locator": "input[name='username']",
                "operation": "type",
                "value": "admin",
                "expected": "用户名输入框显示'admin'"
              },
              {
                "step": 3,
                "action": "输入密码",
                "element": "密码输入框",
                "locator": "input[name='password']",
                "operation": "type",
                "value": "admin123",
                "expected": "密码输入框正确输入（可能显示为掩码字符）"
              },
              {
                "step": 4,
                "action": "点击登录按钮",
                "element": "登录按钮",
                "locator": "button[type='submit']",
                "operation": "click",
                "expected": "成功登录，页面跳转到系统主页或仪表板"
              },
              {
                "step": 5,
                "action": "查找并点击登出按钮/链接",
                "element": "登出按钮/链接",
                "locator": "a[contains(text(), '退出')] | button[contains(text(), '退出')] | .logout-btn",
                "operation": "click",
                "expected": "系统登出，返回到登录页面"
              }
            ],
            "timeout": 15000,
            "retry_count": 2
          }
        ]
      }
    ],
    "test_configuration": {
      "headless": false,
      "viewport": {
        "width": 1920,
        "height": 1080
      },
      "timeout": {
        "default": 10000,
        "navigation": 30000
      },
      "retry": {
        "attempts": 2,
        "delay": 2000
      }
    },
    "reporting": {
      "format": "html",
      "destination": "./reports",
      "include_screenshots": true,
      "include_videos": true,
      "include_console_logs": true
    }
  }
}