{
  "test_plan_name": "RuoYi系统用户管理-新增功能测试计划",
  "test_plan_version": "v1",
  "test_target": "系统管理-用户管理-新增功能",
  "test_environment": {
    "target_url": "http://192.168.142.146/",
    "browser_mode": "headless",
    "encoding": "GBK"
  },
  "authentication": {
    "login_required": true,
    "username": "admin",
    "password": "admin123",
    "login_page_url": "http://192.168.142.146/login?redirect=%2Findex"
  },
  "test_scope": {
    "module": "前端表单功能",
    "feature": "用户新增",
    "test_type": "黑盒测试",
    "platform": "PC"
  },
  "api_interface": {
    "endpoint": "/system/user",
    "method": "POST",
    "description": "新增用户API接口"
  },
  "form_elements": [
    {
      "element_name": "用户昵称",
      "element_selector": "input[placeholder='请输入用户昵称']",
      "element_type": "input",
      "required": true,
      "max_length": 30
    },
    {
      "element_name": "归属部门",
      "element_selector": ".vue-treeselect",
      "element_type": "treeselect",
      "required": true
    },
    {
      "element_name": "手机号码",
      "element_selector": "input[placeholder='请输入手机号码']",
      "element_type": "input",
      "required": false,
      "max_length": 11
    },
    {
      "element_name": "邮箱",
      "element_selector": "input[placeholder='请输入邮箱']",
      "element_type": "input",
      "required": false,
      "max_length": 50
    },
    {
      "element_name": "用户名称",
      "element_selector": "input[placeholder='请输入用户名称']",
      "element_type": "input",
      "required": true,
      "max_length": 30,
      "display_condition": "新增时显示"
    },
    {
      "element_name": "用户密码",
      "element_selector": "input[placeholder='请输入用户密码'][type='password']",
      "element_type": "password",
      "required": true,
      "max_length": 20,
      "display_condition": "新增时显示"
    },
    {
      "element_name": "用户性别",
      "element_selector": "select[placeholder='请选择性别']",
      "element_type": "select",
      "required": false,
      "options": ["0", "1", "2"]
    },
    {
      "element_name": "状态",
      "element_selector": "el-radio-group",
      "element_type": "radio",
      "required": true,
      "options": ["0", "1"]
    },
    {
      "element_name": "岗位",
      "element_selector": "select[placeholder='请选择岗位']",
      "element_type": "select_multiple",
      "required": false
    },
    {
      "element_name": "角色",
      "element_selector": "select[placeholder='请选择角色']",
      "element_type": "select_multiple",
      "required": false
    },
    {
      "element_name": "备注",
      "element_selector": "textarea[placeholder='请输入内容']",
      "element_type": "textarea",
      "required": false
    }
  ],
  "test_steps": [
    {
      "step_id": 1,
      "step_name": "登录系统",
      "precondition": "打开登录页面",
      "actions": [
        {
          "action": "输入账号",
          "selector": "input[name='username']",
          "value": "admin"
        },
        {
          "action": "输入密码",
          "selector": "input[name='password']",
          "value": "admin123"
        },
        {
          "action": "点击登录按钮",
          "selector": "button[type='submit']"
        }
      ],
      "verification": {
        "ui": "验证是否跳转至首页",
        "ux": "验证登录按钮是否禁用",
        "network": "验证登录API返回200状态码"
      }
    },
    {
      "step_id": 2,
      "step_name": "导航至用户管理页面",
      "precondition": "成功登录系统",
      "actions": [
        {
          "action": "点击系统管理菜单",
          "selector": "菜单项-系统管理"
        },
        {
          "action": "点击用户管理子菜单",
          "selector": "菜单项-用户管理"
        }
      ],
      "verification": {
        "ui": "验证页面标题显示'用户管理'",
        "ux": "验证页面是否正常加载"
      }
    },
    {
      "step_id": 3,
      "step_name": "点击新增按钮弹出表单",
      "precondition": "在用户管理页面",
      "actions": [
        {
          "action": "点击新增按钮",
          "selector": "button:contains('新增')"
        }
      ],
      "verification": {
        "ui": "验证新增用户对话框弹出",
        "ux": "验证对话框标题显示'新增用户'"
      }
    },
    {
      "step_id": 4,
      "step_name": "填写必填字段",
      "precondition": "新增用户对话框已打开",
      "actions": [
        {
          "action": "输入用户昵称",
          "selector": "input[placeholder='请输入用户昵称']",
          "value": "测试用户"
        },
        {
          "action": "选择归属部门",
          "selector": ".vue-treeselect",
          "value": "选择第一个部门"
        },
        {
          "action": "输入用户名称",
          "selector": "input[placeholder='请输入用户名称']",
          "value": "testuser001"
        },
        {
          "action": "输入用户密码",
          "selector": "input[placeholder='请输入用户密码'][type='password']",
          "value": "test123456"
        }
      ],
      "verification": {
        "ui": "验证所有输入框正常显示"
      }
    },
    {
      "step_id": 5,
      "step_name": "点击确认按钮提交表单",
      "precondition": "必填字段已填写",
      "actions": [
        {
          "action": "点击确认按钮",
          "selector": "button:contains('确 定')"
        }
      ],
      "verification": {
        "ui": "验证对话框关闭",
        "ux": "验证页面显示成功提示消息",
        "network": "验证新增用户API返回200状态码"
      }
    },
    {
      "step_id": 6,
      "step_name": "验证用户添加成功",
      "precondition": "表单已提交",
      "actions": [
        {
          "action": "刷新用户列表",
          "selector": "查询按钮"
        },
        {
          "action": "搜索新增的用户",
          "selector": "输入用户名称-输入框",
          "value": "testuser001"
        }
      ],
      "verification": {
        "ui": "验证用户列表中显示新增用户",
        "ux": "验证用户信息完整显示"
      }
    }
  ],
  "test_data": {
    "test_user": {
      "nickName": "测试用户",
      "userName": "testuser001",
      "password": "test123456",
      "phonenumber": "13800138000",
      "email": "test@example.com",
      "sex": "0",
      "status": "0",
      "remark": "这是一个测试用户"
    }
  },
  "notes": [
    "本测试计划仅针对PC平台的功能性测试",
    "不包含安全测试、兼容性测试",
    "测试数据中的用户名需要根据实际情况调整以避免重复"
  ]
}